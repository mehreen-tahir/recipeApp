<div class='row'>
  <div class='col-sm-12 p-1'>
    <div class='card text-center mt-3'>
      <div class='card-header'>
        <%= @recipe[:title] %>
      </div>
      <%= image_tag recipe_image(@recipe), class: 'card-img-top img-fluid detail-recipe-img' %>
      <div class='card-body'>
        <h5 class='card-title'>
          <%= @recipe[:chef_name] %>
        </h5>
        <p class='card-text'>
          <%= @recipe[:description] %>
        </p>
        <div class='btn-toolbar'>
          <% @recipe[:tags_list].each do |tag| %>
            <%= button_tag tag, disabled: true , class: 'btn btn-secondary' %>
          <% end if @recipe[:tags_list].present? %>
        </div>
      </div>
    </div>
    <%= link_to 'All Recipes', recipes_path, {class: 'btn btn-primary btn-lg btn-block m-2'} %>
  </div>
</div>
